    <script nonce="@nonce">
        var OriginalMemberText;//保留初始文字，SignoffNotify裡面呼叫
        var OriginalSignoffNotifyText;
        OriginalMemberText = document.getElementById("MemberText").innerHTML;
        OriginalSignoffNotifyText = document.getElementById("SignoffNotifyText").innerHTML;
        $.ajax({
            url: "/Signoff/SignoffNotifyNum",
            type: "POST",
            dataType: "json",
            success: function (response) {
                if (response.success) {
                    if (response.signoffnotifynum != 0) {
                        document.getElementById("MemberText").innerHTML += '<label class="circle"><span>' + response.signoffnotifynum + '</span></label>';
                        document.getElementById("SignoffNotifyText").innerHTML += '<label class="circle"><span>' + response.signoffnotifynum + '</span></label>';
                    }
                } else {
                    alert(response.error);
                }
            },
        });
        var forms = document.getElementsByTagName('form');

        for (var i = 0; i < forms.length; i++) {
            forms[i].autocomplete = 'off';
        }

        var inputs = document.getElementsByTagName('input');

        for (var i = 0; i < inputs.length; i++) {
            inputs[i].autocomplete = 'off';
        }

    </script>
